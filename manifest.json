{
	"manifest_version": 2,

	"name": "__MSG_SimplePick__",
	"description": "A chrome extension that saves bookmark space.",
	"version": "0.2",
	"default_locale": "en",
	"author": "VutonDesign / Smrman",
	"icons": {
			"16":	"/img/icon16.png",
			"32": 	"/img/icon32.png",
			"48": 	"/img/icon48.png",
			"64": 	"/img/icon64.png",
			"128":	"/img/icon128.png"
	},
  
	"browser_action": {
		"default_icon": "/img/icon64.png",
		"default_title": "SimplePick - A chrome extension that saves bookmark space.",
		"default_popup": "popup.html"
	},
	
	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"https://github.com/*",
		"https://www.facebook.com/",
		"https://twitter.com/",
		"https://www.instagram.com/",
		"https://www.linkedin.com/",  
		"https://www.google.com/",
		"https://www.apple.com/",
		"https://www.android.com/"
	],
	
	"background": {
		"scripts": ["js/index.js"]
	}
}
